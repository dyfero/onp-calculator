<Button>
    font_size: 32
    #color: 1,1,1,1
    #border: (10,10,10,10)
    background_normal: ''
    background_color: 10/255, 10/255, 10/255, 0.9

<CalculatorLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        GridLayout:
            cols: 1
            size_hint_y: 0.25

            Label:
                id: label_expression
                text_size: self.size
                font_size: 32
                halign: 'right'
                valign: 'middle'

            Label:
                id: label_input
                text_size: self.size
                font_size: 32
                padding: 10, 10
                halign: 'right'
                valign: 'middle'
                #background_color: (0.3, 0.3, 0.3, 1)
                #canvas.before:
                #    Color:
                #        rgba: self.background_color
                #    Rectangle:
                #        size: self.size
                #        pos: self.pos


        GridLayout:
            cols: 4

            Button:
            Button:
            Button:
                id: btn_remove
                text: u'\u00AB'
                on_press: root.remove(self)
                background_normal: ''
                background_color: 138/255, 14/255, 6/255, 0.9
            Button:
                id: btn_clear
                text: 'C'
                on_press: root.clear(self)
                background_normal: ''
                background_color: 138/255, 14/255, 6/255, 0.9

            # row 1
            Button:
                id: btn_left_bracket
                text: '('
                background_color: 26/255, 79/255, 163/255, 0.9
                on_press: root.left_bracket(self)
            Button:
                id: btn_right_bracket
                text: ')'
                on_press: root.right_bracket(self)
                background_color: 26/255, 79/255, 163/255, 0.9
            Button:
                id: btn_pow
                text: '^'
                on_press: root.sign(self)
                background_color: 26/255, 79/255, 163/255, 0.9
            Button:
                id: btn_div
                text: '/'
                on_press: root.sign(self)
                background_color: 26/255, 79/255, 163/255, 0.9

            # row 2
            Button:
                id: btn_7
                text: '7'
                on_press: root.number(self)
            Button:
                id: btn_8
                text: '8'
                on_press: root.number(self)
            Button:
                id: btn_9
                text: '9'
                on_press: root.number(self)
            Button:
                id: btn_mul
                text: '*'
                on_press: root.sign(self)
                background_color: 26/255, 79/255, 163/255, 0.9

            # row 3
            Button:
                id: btn_4
                text: '4'
                on_press: root.number(self)
            Button:
                id: btn_5
                text: '5'
                on_press: root.number(self)
            Button:
                id: btn_6
                text: '6'
                on_press: root.number(self)
            Button:
                id: btn_sub
                text: '-'
                on_press: root.sign(self)
                background_color: 26/255, 79/255, 163/255, 0.9

            # row 4
            Button:
                id: btn_1
                text: '1'
                on_press: root.number(self)
            Button:
                id: btn_2
                text: '2'
                on_press: root.number(self)
            Button:
                id: btn_3
                text: '3'
                on_press: root.number(self)
            Button:
                id: btn_add
                text: '+'
                on_press: root.sign(self)
                background_color: 26/255, 79/255, 163/255, 0.9

            # row 5
            Button:
                id: btn_change_sign
                text: '+/-'
                on_press: root.change_sign(self)
            Button:
                id: btn_0
                text: '0'
                on_press: root.number(self)
            Button:
                id: btn_dot
                text: ','
                on_press: root.dot(self)
            Button:
                id: btn_equal
                text: '='
                on_press: root.result()
                background_color: 26/255, 79/255, 163/255, 0.9
